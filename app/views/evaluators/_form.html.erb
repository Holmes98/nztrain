<%= form_for(@evaluator) do |f| %>
  <% if @evaluator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evaluator.errors.count, "error") %> prohibited this evaluator from being saved:</h2>

      <ul>
      <% @evaluator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :source %><br />
    <%= f.text_area :source %>
  </div>
  <div class="field">
    <%= f.label :language_id %><br>
    <%= f.select :language_id, options_for_select([["", 0]] + Language.pluck(:name, :id).sort, @evaluator.language_id) %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br />
    <% if policy(@evaluator).transfer? %>
      <%= f.text_field :owner_id %>
    <% else %>
      <%= handle(@evaluator.owner) %>
    <% end %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
